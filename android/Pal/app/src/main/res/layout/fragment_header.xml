<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_dark"
    android:elevation="3dp"
    android:gravity="center_vertical">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:src="@drawable/ic_header_logo"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginLeft="@dimen/base_padding"
        android:layout_marginRight="@dimen/base_padding" />
    <View
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:background="@color/primary_light"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:alpha="0.5" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_audio_mode"
        android:background="@drawable/shape_circle_line_button"
        android:src="@drawable/ic_microphone_borderless_lightblue"
        android:layout_marginLeft="@dimen/base_padding"
        android:layout_marginRight="@dimen/base_padding"
        android:onClick="onToggleAudioMode" />
</LinearLayout>