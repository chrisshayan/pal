<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    android:weightSum="1">

    <vietnamworks.com.pal.components.CustomCardStackView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cards_stack_view"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:focusable="false" />

    <fragment
        android:id="@+id/fragment_writing"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        class="vietnamworks.com.pal.fragments.FragmentWriting" ></fragment>

    <fragment
        android:id="@+id/fragment_speaking"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        class="vietnamworks.com.pal.fragments.FragmentRecording" ></fragment>

</RelativeLayout>