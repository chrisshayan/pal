<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="2dp"
    card_view:cardBackgroundColor="#fffde8"
    android:layout_marginLeft="@dimen/base_padding_4x"
    android:layout_marginRight="@dimen/base_padding_4x"
    android:layout_marginTop="@dimen/base_padding_2x"
    android:layout_marginBottom="@dimen/base_padding_2x"
    android:baselineAligned="false"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/base_padding_2x"
        android:nestedScrollingEnabled="false"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:onClick="doQuest">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView7"
            android:src="@drawable/ic_challenge_icon"
            android:contentDescription="@null" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingLeft="@dimen/base_padding_2x"
            android:paddingRight="@dimen/base_padding_2x"
            android:paddingBottom="@dimen/base_padding_2x">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/challenge_title"
                android:id="@+id/textView19"
                style="@style/Text.Medium.Title"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/placeholder_text_long"
                android:id="@+id/quest"
                style="@style/Text.Medium.MutedTitle" />

        </LinearLayout>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView17"
            android:src="@drawable/ic_navigation_chevron_right"
            android:contentDescription="@null" />

    </LinearLayout>
</android.support.v7.widget.CardView>