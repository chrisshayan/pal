<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="2dp"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    android:layout_marginLeft="@dimen/base_padding_4x"
    android:layout_marginRight="@dimen/base_padding_4x"
    android:layout_marginTop="@dimen/base_padding_2x"
    android:layout_marginBottom="@dimen/base_padding_2x"
    android:baselineAligned="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical"
        android:background="?android:selectableItemBackground"
        android:id="@+id/holder"
        >
            <View
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:background="@color/colorPrimary"
                android:id="@+id/topbar" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/base_padding_2x">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/base_padding_2x">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder_text_extra_short"
                        android:id="@+id/cateogry"
                        style="@style/Text.Small"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/placeholder_text_extra_short"
                        android:id="@+id/level"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        style="@style/Text.ExtraSmall.Muted" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/colorDividerDarkAlpha"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/placeholder_text_short"
                    android:id="@+id/content"
                    android:layout_marginTop="@dimen/base_padding_2x"
                    style="@style/Text.Small" />
            </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
