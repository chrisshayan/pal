<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/ic_low_poly_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/app_name"
                android:id="@+id/app_title"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="40sp"
                android:textColor="@color/colorTextLight" />
        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/auth_footer_height"
            android:background="@color/colorPrimaryLight">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_vietnamworks" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <fragment
                android:layout_width="@dimen/auth_dialog_width"
                android:layout_height="wrap_content"
                android:name="vietnamworks.com.pal.fragments.LoginFragment"
                android:id="@+id/fragment_login"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                tools:layout="@layout/fragment_login"
                android:layout_marginLeft="@dimen/base_padding_4x"
                android:layout_marginRight="@dimen/base_padding_4x" />

            <fragment
                android:layout_width="@dimen/auth_dialog_width"
                android:layout_height="wrap_content"
                android:name="vietnamworks.com.pal.fragments.RegisterFragment"
                android:id="@+id/fragment_register"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                tools:layout="@layout/fragment_login"
                android:layout_marginLeft="@dimen/base_padding_4x"
                android:layout_marginRight="@dimen/base_padding_4x" />

            <fragment
                android:layout_width="@dimen/auth_dialog_width"
                android:layout_height="wrap_content"
                android:name="vietnamworks.com.pal.fragments.RegisterSuccessFragment"
                android:id="@+id/fragment_register_success"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                tools:layout="@layout/fragment_login"
                android:layout_marginLeft="@dimen/base_padding_4x"
                android:layout_marginRight="@dimen/base_padding_4x" />

            <fragment
                android:layout_width="@dimen/auth_dialog_width"
                android:layout_height="wrap_content"
                android:name="vietnamworks.com.pal.fragments.RegisterErrorFragment"
                android:id="@+id/fragment_register_error"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                tools:layout="@layout/fragment_login"
                android:layout_marginLeft="@dimen/base_padding_4x"
                android:layout_marginRight="@dimen/base_padding_4x" />

            <fragment
                android:layout_width="@dimen/auth_dialog_width"
                android:layout_height="wrap_content"
                android:name="vietnamworks.com.pal.fragments.AuthProcessingFragment"
                android:id="@+id/fragment_auth_processing"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                tools:layout="@layout/fragment_login"
                android:layout_marginLeft="@dimen/base_padding_4x"
                android:layout_marginRight="@dimen/base_padding_4x" />
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>