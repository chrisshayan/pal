<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/app_bar_timeline"
    tools:context="vietnamworks.com.pal.activities.TimelineActivity"
    android:background="@color/colorPrimaryLight"
    android:onClick="doNothing">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/base_padding_4x"
            android:paddingRight="@dimen/base_padding_4x">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/say_something"
                android:id="@+id/subject"
                style="@style/Text.Medium.Muted"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/base_padding_2x"
                android:layout_marginBottom="@dimen/base_padding_2x"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnHint"
                    android:src="@drawable/ic_action_info_outline"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:contentDescription="@null"
                    android:padding="5dp" />
            </RelativeLayout>
        </LinearLayout>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/message"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:background="#00000000"
            android:hint="@string/composer_hint"
            android:gravity="top"
            android:textColorHint="@color/colorTextInputHint"
            android:layout_marginRight="@dimen/base_padding_4x"
            android:layout_marginLeft="@dimen/base_padding_4x"
            style="@style/Text.Medium" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/dashed"
            android:contentDescription="@null"
            android:layerType="software"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/recorder"
                android:src="@drawable/ic_av_mic"
                android:background="?attr/selectableItemBackground"
                android:scaleType="centerInside"
                android:contentDescription="@null"
                android:paddingLeft="@dimen/base_padding_2x"
                android:paddingRight="@dimen/base_padding_2x"
                android:layout_marginRight="@dimen/base_padding_2x" />

            <FrameLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/base_padding_4x">

                <vietnamworks.com.pal.custom_views.AudioPlayer android:id="@+id/player" android:layout_height="match_parent" android:layout_width="fill_parent"
                    android:gravity="center_vertical">
                </vietnamworks.com.pal.custom_views.AudioPlayer>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/recorder_hint"
                    style="@style/Text.ExtraSmall.Muted"
                    android:gravity="center_vertical" />
            </FrameLayout>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/btn_done"
                android:layout_marginRight="@dimen/base_padding_2x" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/overlay"
        android:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/overlay_background"
            android:background="@color/colorPrimaryLight"
            android:alpha="0.9"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tutor_2"
                android:visibility="gone">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/imageButton"
                    android:src="@drawable/ic_av_mic"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:contentDescription="@null"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="@dimen/tutor_fab_arrow_width"
                    android:layout_height="60dp"
                    android:id="@+id/imageView12"
                    android:src="@drawable/ic_tutor_arrow"
                    android:contentDescription="@null"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/imageButton"
                    android:layout_toEndOf="@+id/imageButton" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView15"
                    android:src="@drawable/step_02"
                    android:contentDescription="@null"
                    android:layout_marginLeft="140dp"
                    android:layout_marginStart="140dp"
                    android:layout_above="@+id/imageView12"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/guide_user_recorder_1"
                    android:id="@+id/textView16"
                    style="@style/Text.Medium"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/imageView12"
                    android:layout_toEndOf="@+id/imageView12"
                    android:gravity="left"
                    android:paddingLeft="@dimen/base_padding" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tutor_3"
                android:layout_marginRight="@dimen/base_padding"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/tutor_fab_height"
                    android:id="@+id/imageView13"
                    android:src="@drawable/ic_tutor_arrow_2"
                    android:contentDescription="@null"
                    android:layout_above="@+id/button4"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_send"
                    android:id="@+id/textView17"
                    style="@style/Text.Medium"
                    android:gravity="right"
                    android:layout_above="@+id/imageView13"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView16"
                    android:src="@drawable/step_03"
                    android:contentDescription="@null"
                    android:layout_alignBottom="@+id/textView17"
                    android:layout_toLeftOf="@+id/textView17"
                    android:layout_toStartOf="@+id/textView17" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/send"
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/button4"
                    android:paddingBottom="@dimen/base_padding_2x"
                    android:clickable="false"
                    android:enabled="true"
                    android:onClick="onClickedInGuideComponent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/imageView13"
                    android:layout_alignEnd="@+id/imageView13" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tutor_1"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="@dimen/base_padding"
                android:visibility="visible">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView14"
                    android:src="@drawable/step_01"
                    android:contentDescription="@null"
                    android:layout_marginLeft="@dimen/base_padding_2x" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/composer_hint"
                    android:id="@+id/textView18"
                    style="@style/Text.Medium"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView14"
                    android:layout_toEndOf="@+id/imageView14"
                    android:layout_marginLeft="@dimen/base_padding" />

            </RelativeLayout>

        </RelativeLayout>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryLightAlpha"
        android:onClick="doNothing"
        android:id="@+id/recorder_layout"
        android:visibility="gone">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            card_view:cardElevation="2dp"
            card_view:cardBackgroundColor="#ffffff"
            android:baselineAligned="false"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/base_padding_2x">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/btn_stop_recorder"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_recorder_on"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:paddingTop="@dimen/base_padding_2x" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/recorder_speak_now"
                    android:id="@+id/recorder_screen_guide"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/base_padding_4x"
                    style="@style/Text.Medium.Muted" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/recorder_timer"
                    android:id="@+id/recorder_timeleft"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/base_padding_4x"
                    style="@style/Text.Medium.Muted" />

                <TextView
                    style="@style/Text.ExtraSmall.Muted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/guide_user_recorder_2"
                    android:id="@+id/textView21"
                    android:layout_below="@+id/recorder_screen_guide"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/base_padding" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </RelativeLayout>

</FrameLayout>
