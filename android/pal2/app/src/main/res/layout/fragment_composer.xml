<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/app_bar_timeline"
    tools:context="vietnamworks.com.pal.activities.TimelineActivity"
    android:background="@color/colorPrimaryLight">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/pink_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_av_mic"
            fab:fab_colorNormal="@color/colorPrimaryDark"
            fab:fab_colorPressed="@color/colorPrimary"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/base_padding_4x">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textView5" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorDividerDark"
            android:alpha="0.5"
            android:layout_marginTop="@dimen/base_padding_2x"
            android:layout_marginBottom="@dimen/base_padding_2x"></View>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/editText"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:background="#00000000"
            android:hint="@string/composer_hint"
            android:gravity="top" />

        <vietnamworks.com.pal.custom_views.AudioPlayer android:id="@+id/player" android:layout_height="wrap_content" android:layout_width="wrap_content">
        </vietnamworks.com.pal.custom_views.AudioPlayer>
    </LinearLayout>

</FrameLayout>
